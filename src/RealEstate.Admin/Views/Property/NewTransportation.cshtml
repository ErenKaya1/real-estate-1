@model src.RealEstate.Admin.Models.TransportationProperty.TransportationPropertyNewViewModel

@{
    ViewData["Title"] = "Yeni Ulaşım Özelliği";
}

@if (ViewData["NewTransportationError"] != null)
{
    <div class="alert alert-danger"><b>@ViewData["NewTransportationError"]</b></div>
}

<div class="card mb-4">
    <h6 class="card-header">
        Yeni Ulaşım Özelliği Ekle
    </h6>
    <div class="card-body">
        <form asp-controller="Property" asp-action="NewTransportation" method="POST" class="property-form">
            <div class="form-group">
                <label asp-for="PropertyNameTR" class="form-label"></label>
                <input asp-for="PropertyNameTR" class="form-control" placeholder="Metro">
            </div>
            <div class="form-group">
                <label asp-for="PropertyNameEN" class="form-label"></label>
                <input asp-for="PropertyNameEN" class="form-control" placeholder="Subway">
            </div>
            <button type="submit" class="btn btn-admin-primary">Kaydet</button>
            <a asp-controller="Property" asp-action="ListTransportations" class="back-link">Listeye Dön</a>
        </form>
    </div>
</div>