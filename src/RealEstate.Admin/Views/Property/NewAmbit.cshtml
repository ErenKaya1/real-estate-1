@model src.RealEstate.Admin.Models.AmbitProperty.AmbitPropertyNewViewModel

@{
    ViewData["Title"] = "Yeni Muhit Özelliği";
}

@if (ViewData["NewAmbitError"] != null)
{
    <div class="alert alert-danger"><b>@ViewData["NewAmbitError"]</b></div>
}

<div class="card mb-4">
    <h6 class="card-header">
        Yeni Muhit Özelliği Ekle
    </h6>
    <div class="card-body">
        <form asp-controller="Property" asp-action="NewEAmbit" method="POST" class="property-form">
            <div class="form-group">
                <label asp-for="PropertyNameTR" class="form-label"></label>
                <input asp-for="PropertyNameTR" class="form-control" placeholder="Hastane">
            </div>
            <div class="form-group">
                <label asp-for="PropertyNameEN" class="form-label"></label>
                <input asp-for="PropertyNameEN" class="form-control" placeholder="Hospital">
            </div>
            <button type="submit" class="btn btn-admin-primary">Kaydet</button>
            <a asp-controller="Property" asp-action="ListAmbits" class="back-link">Listeye Dön</a>
        </form>
    </div>
</div>