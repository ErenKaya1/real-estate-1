@model System.Collections.Generic.List<src.RealEstate.Admin.Models.WarmingWay.WarmingWayListViewModel>

@{
    ViewData["Title"] = "Isınma Yolları";
}

@if (TempData["SavedSuccessfully"] != null)
{
    <div class="alert alert-success"><b>@TempData["SavedSuccessfully"]</b></div>
}

@if (TempData["WarmingWayNotFound"] != null)
{
    <div class="alert alert-danger"><b>@TempData["WarmingWayNotFound"]</b></div>
}

@if (Model.Count == 0)
{
    <div class="alert alert-warning"><b>Henüz ısınma yolu eklemediniz.</b></div>
}
else
{
    <h4 class="font-weight-bold py-3 mb-4">Isınma Yolları</h4>
    <a asp-controller="WarmingWay" asp-action="New" class="btn btn-admin-primary mb-3">
        <i class="fas fa-plus mr-2"></i>Yeni Ekle
    </a>

    <div class="table-responsive">
        <table class="table table-striped table-bordered list-table">
            <thead>
                <tr>
                    <th class="sort-column"></th>
                    <th>Türkçe</th>
                    <th>İngilizce</th>
                    <th class="options-column">Seçenekler</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td class="sort-column">@(i+1)</td>
                        <td>@Model[i].WarmingWayNameTR</td>
                        <td>@Model[i].WarmingWayNameEN</td>
                        <td class="options-column">
                            <a asp-controller="WarmingWay" asp-action="Edit" asp-route-warmingWayId="@Model[i].Id" class="badge badge-info">Düzenle</a>
                            <a href="javascript:void(0)" class="badge badge-danger" onclick="deleteWarmingWayConfirm('@Model[i].Id')">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Styles{
    <link rel="stylesheet" href="/assets/vendor/libs/datatables/datatables.css">
    <link rel="stylesheet" href="/assets/vendor/libs/sweetalert2/sweetalert2.css">
}

@section Scripts{
    <script type="text/javascript" src="/assets/vendor/libs/datatables/datatables.js"></script>
    <script type="text/javascript" src="/assets/vendor/libs/sweetalert2/sweetalert2.js"></script>
    <script type="text/javascript" src="/assets/js/dataTables.js"></script>
}