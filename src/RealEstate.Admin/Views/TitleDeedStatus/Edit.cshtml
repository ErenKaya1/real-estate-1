@model src.RealEstate.Admin.Models.TitleDeedStatus.TitleDeedStatusEditViewModel

@{
    ViewData["Title"] = "Tapu Durumu Düzenle";
}

@if (TempData["EditTitleDeedStatusMessage"] != null)
{
    <div class="alert alert-info"><b>@TempData["EditTitleDeedStatusMessage"]</b></div>
}

<div class="card mb-4">
    <h6 class="card-header">
        Tapu Durumu Düzenle
    </h6>
    <div class="card-body">
        <form asp-controller="TitleDeedStatus" asp-action="Edit" method="POST"
            class="titledeedstatus-form">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StatusNameTR" class="form-label"></label>
                <input asp-for="StatusNameTR" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="StatusNameEN" class="form-label"></label>
                <input asp-for="StatusNameEN" class="form-control">
            </div>
            <button type="submit" class="btn btn-admin-primary">Kaydet</button>
            <a href="javascript:void(0)" class="btn btn-danger" onclick="deleteTitleDeedStatusConfirm('@Model.Id')">Sil</a>
            <a asp-controller="TitleDeedStatus" asp-action="List" class="back-link">Listeye Dön</a>
        </form>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="/assets/vendor/libs/sweetalert2/sweetalert2.css">
}

@section Scripts{
    <script type="text/javascript" src="/assets/vendor/libs/sweetalert2/sweetalert2.js"></script>
}