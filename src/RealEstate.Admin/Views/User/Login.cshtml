@model src.RealEstate.Admin.Models.User.UserLoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<div class="d-flex justify-content-center align-items-center">
    <img src="/assets/logo.png" class="auth-logo" />
</div>
<form class="my-5 login-form" method="POST" asp-controller="login" asp-antiforgery="true">
    <div class="form-group">
        <label class="form-label" asp-for=Username></label>
        <input class="form-control" asp-for="Username" required>
    </div>
    <div class="form-group">
        <label class="form-label d-flex justify-content-between align-items-end">
            <div>Parola</div>
            <a asp-controller="login" asp-action="forgotpassword" class="d-block small">Parolamı Unuttum</a>
        </label>
        <input asp-for="Password" class="form-control" required>
    </div>
    <div class="d-flex justify-content-between align-items-center m-0">
        <label class="custom-control custom-checkbox m-0">
            <input asp-for="IsPersistent" class="custom-control-input">
            <span class="custom-control-label">Beni Hatırla</span>
        </label>
        <button type="submit" class="btn btn-admin-primary">Giriş</button>
    </div>
</form>